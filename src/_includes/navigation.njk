{% macro renderNavList(entry) -%}
{% if entry.url !== '/' + locale + '/' %}
<li class="nav-item">
  <a href="{{ entry.url | url }}"
    class="nav-link{% if entry.url == page.url %} text-primary{% endif %}">{{entry.title}}</a>
</li>
{% endif %}
{%- endmacro %}

<ul class="navbar-nav">
  {%- for item in collections[locale] | eleventyNavigation -%}{{ renderNavList(item) }}
  {% endfor -%}
  {% include "languages.njk" %}
  <li class="nav-item d-lg-none">
    <a href="apply" class="nav-link text-primary">{{ 'Join us' | i18n }}</a>
  </li>
</ul>